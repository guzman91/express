<h1>Edit Course</h1>

<form action="/courses/edit" method="POST" class="edit-form">
  <div class="input-field col s6">
    <input name="title" id="title" type="text" class="validate" value="{{course.title}}" />
    <label for="Course">Course</label>
  </div>

  <div class="input-field col s6">
    <input name="price" id="price" type="text" class="validate" value="{{course.price}}" />
    <label for="Price">Price</label>
  </div>

  <div class="input-field col s6">
    <input name="url" id="url" type="text" class="validate" value="{{course.url}}" />
    <label for="File_URL">File URL</label>
  </div>

  <input name="id" id="id" type="hidden" class="validate" value="{{course._id}}" />
  <input name="_csrf" type="hidden" value="{{csrf}}" />
  <button class="waves-effect waves-light btn" type="submit">Edit
  </button>
</form>

<form action="/courses/remove" method="POST">
  <input name="_csrf" type="hidden" value="{{csrf}}" />
  <input name="id" id="id" type="hidden" class="validate" value="{{course._id}}" />
  <button class="btn red" type="submit">Delete
  </button>
</form>