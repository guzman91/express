<h1>Courses</h1>

{{#if courses.length}}
  {{#each courses}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-image">
            <img src="{{url}}" />

          </div>
          <div class="card-content">
            <span class="card-title course">{{title}}</span>
            <p class="price">{{price}}</p>
          </div>
          <div class="card-action action">
            <a href="/courses/{{_id}}">Open course</a>

            {{#if @root.isAuth}}
              {{#isEqual userID @root.id}}
                <a href="/courses/{{_id}}/edit?allow=true">Edit</a>
              {{/isEqual}}
              <form action="/add" method="post">
                <input name="_csrf" type="hidden" value="{{@root.csrf}}" />
                <input type="hidden" name="id" value="{{_id}}" />
                <button class="btn waves-effect waves-light" type="submit">Buy</button>
              </form>
            {{/if}}

          </div>

        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>No Courses</p>
{{/if}}