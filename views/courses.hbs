<h1>Courses</h1>

{{#if courses.length}}
  {{#each courses}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-image">
            <img src="{{url}}" />

          </div>
          <div class="card-content">
            <span class="card-title course">{{course}}</span>
            <p class="price">{{prise}}</p>
          </div>
          <div class="card-action">
            <a href="/courses/{{id}}">Open course</a>
            <a href="/courses/{{id}}/edit?allow=true">Edit</a>
          </div>

        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>No Courses</p>
{{/if}}